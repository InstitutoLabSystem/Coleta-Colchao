                linhasAco[i].style.display = "table-row";
            }
            for (var i = 0; i < tabelaBorda.length; i++) {
                tabelaBorda[i].style.display = "table-row";
            }

            if (linhaEspuma.length > 0 && tabelaToda) {
                for (var i = 0; i < linhaEspuma.length; i++) {
                    linhaEspuma[i].style.display = "none";
                }
                tabelaToda.style.display = "none";

            }


        }
        function mostrarLinhaEspuma() {
            var linhaEspuma = document.getElementsByClassName("linha-espuma");
            var linhasAco = document.getElementsByClassName("linha-aco");
            var tabelaBorda = document.getElementsByClassName("borda");
            var tabelaToda = document.getElementById("molejo");


            for (var i = 0; i < linhaEspuma.length; i++) {
                linhaEspuma[i].style.display = "table-row";
            }
            for (var i = 0; i < tabelaBorda.length; i++) {
                tabelaBorda[i].style.display = "table-row";
            }

            if (linhasAco.length > 0 && tabelaToda) {
                for (var i = 0; i < linhasAco.length; i++) {
                    linhasAco[i].style.display = "none";
                }
                tabelaToda.style.display = "none";

            }
        }

        function mostrarTabelaMolejo() {
            var tabelaToda = document.getElementById("molejo");
            var linhaEspuma = document.getElementsByClassName("linha-espuma");
            var linhasAco = document.getElementsByClassName("linha-aco");
            var tabelaBorda = document.getElementsByClassName("borda");


            if (linhasAco.length > 0 && linhaEspuma.length > 0) {
                linhasAco[0].style.display = "none";
                linhaEspuma[0].style.display = "none";
                tabelaBorda[0].style.display = "none";
                tabelaToda.style.display = "table";
            }
        }
        function mostrarTabelas() {
            var linhasAco = document.getElementsByClassName("linha-aco");
            var linhaEspuma = document.getElementsByClassName("linha-espuma");
            var tabelaBorda = document.getElementsByClassName("borda");
            var tabelaToda = document.getElementById("molejo");

            toggleElementDisplay(linhasAco, "table-row");
            toggleElementDisplay(linhaEspuma, "table-row");
            toggleElementDisplay(tabelaBorda, "table-row");

            // Mostrar a tabelaToda sempre que a função for chamada
            if (tabelaToda) {
                tabelaToda.style.display = "table";
            }
        }
        function toggleElementDisplay(elements, displayValue) {
            for (var i = 0; i < elements.length; i++) {
                elements[i].style.display = displayValue;
            }
        }


    </script>
