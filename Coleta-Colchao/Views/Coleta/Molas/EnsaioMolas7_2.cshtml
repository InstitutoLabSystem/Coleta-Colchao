@{
    Layout = null;
}
@{
    ViewData["Title"] = "Molas Parte ";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/coleta.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

</head>
<body>
    <table class="tables table-bordered border-secondary  table-sm">
        <thead>
            <tr>
                <td><img src="https://www.labsystem-nuvem.com.br/imagens_arq/imagens/img/LabSystem.png" class="imagem" /></td>
                <td colspan="3" class="fundo-tabela">Coleta De Dados</td>
                <td class="fundo-tabela">N Os:</td>
            </tr>
            <tr>
                <td colspan="4">Colchão De Molas (Portaria Inmetro 75)</td>
                <td rowspan="2"> @ViewBag.os</td>
            </tr>
            <tr>
                <td>Inicio:</td>
                <td><input class="form-control" type="date" /></td>
                <td>Termino:</td>
                <td><input class="form-control" type="date" /></td>
            </tr>
        </thead>
    </table>

    <table class="tables table-bordered border-secondary  table-sm">
        <tr>
            <td>Temperatura Inicial:</td>
            <td><input class="form-control" type="date" /></td>
            <td>Temperatura Final:</td>
            <td><input class="form-control" type="date" /></td>
        </tr>
    </table>
    <br />
    <table class="tables table-bordered border-secondary  table-sm">
        <tr class="fundo-tabela">
            <td>Item</td>
            <td>Descrição</td>
            <td>Resultado</td>
        </tr>
        <tr>
            <td rowspan="5">7.2</td>
            <td>
                <b>Comprimento:</b> Medir o comprimento do colchão ou colchonete em 3 pontos equidistantes, considerando como a comprimento total o valor médio encontrado em centímetros.
            </td>
            <td rowspan="5">
                <select class="form-control" name="Escolha" style="height:400px">
                    <option selected> --- </option>
                    <option> Sim </option>
                    <option> Não </option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <table class="tables table-bordered border-secondary  table-sm">
                    <tr class="fundo-tabela">
                        <td>Pontos De Medição</td>
                        <td>Comprimento (cm)</td>
                        <td>
                            Comprimento especificado (cm)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            1°
                        </td>
                        <td>
                            <input class="form-control" type="text" />
                        </td>
                        <td rowspan="4"><input class="form-control" type="text" /></td>
                    </tr>
                    <tr>
                        <td>
                            2°
                        </td>
                        <td>
                            <input class="form-control" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            3°
                        </td>
                        <td>
                            <input class="form-control" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>Media:</td>
                        <td colspan="3"><input class="form-control" readonly /></td>
                    </tr>
                </table>
                <p> Nota:NOTA: São adimitadas tolerâncias de ± 1,5 cm.</p>
            </td>
        </tr>

    </table>
    <table class="tables table-bordered border-secondary  table-sm">
        <tr class="fundo-tabela">
            <td>Item</td>
            <td>Descrição</td>
            <td>Resultado</td>
        </tr>
        <tr>
            <td rowspan="5">7.2</td>
            <td>
                <b>Largura:</b> Medir a largura do colchão ou colchonete em 3 pontos equidistantes, considerando como a largura total o valor médio encontrado em centímetros.
            </td>
            <td rowspan="5">
                <select class="form-control" name="Escolha" style="height:400px">
                    <option selected> --- </option>
                    <option> Sim </option>
                    <option> Não </option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <table class="tables table-bordered border-secondary  table-sm">
                    <tr class="fundo-tabela">
                        <td>Pontos De Medição</td>
                        <td>Comprimento (cm)</td>
                        <td>
                            Comprimento especificado (cm)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            1°
                        </td>
                        <td>
                            <input class="form-control" type="text" />
                        </td>
                        <td class="altura-input-centralizar" rowspan="4"><input class="form-control altura-input" type="text" /></td>
                    </tr>
                    <tr>
                        <td>
                            2°
                        </td>
                        <td>
                            <input class="form-control" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>
                            3°
                        </td>
                        <td>
                            <input class="form-control" type="text" />
                        </td>
                    </tr>
                    <tr>
                        <td>Media:</td>
                        <td colspan="3"><input class="form-control" readonly /></td>
                    </tr>
                </table>
                <p> Nota:NOTA: São adimitadas tolerâncias de ± 1,5 cm.</p>
            </td>
        </tr>
    </table>
    <table class="tables table-bordered border-secondary  table-sm">
        <tr>
            <td rowspan="25">7.2</td>
            <td class="fundo-tabela">
                <b>
                    Matelassê e estofamento

                </b>
            </td>
            <td rowspan="25">
                <select class="form-control" name="Escolha" style="height:550px">
                    <option selected> --- </option>
                    <option> C </option>
                    <option> NA </option>
                    <option> NC </option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <table class="tables table-bordered border-secondary  table-sm">
                    <p>Tabela - Matelassê e tipos de estofamento </p>
                    <tr class="fundo-tabela">
                        <td colspan="2">Tipos de espuma </td>
                        <td>Espressura minima especificada </td>
                    </tr>
                    <tr>
                        <td colspan="2">Espuma do Matalassê</td>
                        <td>10,0 mm</td>
                    </tr>
                    <tr>
                        <td colspan="2">Espuma de acabamento (face sup)</td>
                        <td>20,0 mm</td>
                    </tr>
                    <tr>
                        <td colspan="2">Espuma de acabamento (face inf)</td>
                        <td>20,0 mm</td>
                    </tr>
                    <tr><td rowspan="7">Estofamento</td> </tr>

                    <tr>
                        <td>Convencional</td>
                        <td>20,00 mm</td>
                    </tr>
                    <tr>
                        <td>Hipermacia</td>
                        <td>20,00 mm</td>
                    </tr>
                    <tr>
                        <td>Macia</td>
                        <td>20,00 mm</td>
                    </tr>
                    <tr>
                        <td>HR</td>
                        <td>20,00 mm</td>
                    </tr>
                    <tr>
                        <td>Viscoelástica</td>
                        <td>30,00 mm</td>
                    </tr>
                    <tr>
                        <td>Aglomerado</td>
                        <td>20,00 mm</td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td>
                <table class="tables table-bordered border-secondary  table-sm">
                    <tr class="fundo-tabela">
                        <td>Tipos de espuma</td>
                        <td>Espessura minima Encontrada</td>
                    </tr>
                    <tr>
                        <td>
                            <select class="form-control" name="Escolha">
                                <option selected> --- </option>
                                <option> Espuma do Matelassê </option>
                                <option> Espuma de acabamento (face sup) </option>
                                <option> Espuma de acabamento (face inf) </option>
                                <option> Estofamento Convencional </option>
                                <option> Estofamento Hipermacia </option>
                                <option> Estofamento Macia </option>
                                <option> Estofamento HR </option>
                                <option> Estofamento Viscoelástica </option>
                                <option> Estofamento Aglomerado </option>
                            </select>
                        </td>
                        <td><input class="form-control" type="text" /></td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <br />
    <div class="d-grid gap-2 d-flex justify-content-center">
        <button type="submit" class="btn btn-success btn btn-primary btn-md">Salvar</button>
    </div>


    @if (TempData.ContainsKey("Mensagem"))
    {
        <script>
            alert('@Html.Raw(TempData["Mensagem"])');
        </script>
    }
</body>
</html>