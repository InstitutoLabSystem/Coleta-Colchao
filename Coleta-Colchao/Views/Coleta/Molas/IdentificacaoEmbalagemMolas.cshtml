                        <select class="controlador" name="densidade_espuma">
                            <option selected> @Model.densidade_espuma</option>
                            <option value="---"> --- </option>
                            <option value="Sim"> Sim </option>
                            <option value="Não"> Não </option>
                        </select>
                    </td>
                </tr>
                <tr>
