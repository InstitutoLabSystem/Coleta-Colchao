                            <td><input type="text" class="form-control" readonly asp-for="comp_media_tres" /></td>
                        </tr>
                    </table>
                    <br />
                    <table class="tables table-bordered border-secondary  table-sm">

                        <tr class="fundo-tabela">
                            <td rowspan="10">---</td>
                            <td> Amostra 1º</td>
                            <td> Amostra 2º</td>
                            <td> Amostra 3º</td>
                        </tr>
                        <tr class="fundo-tabela">
                            <td>Espessura Inicial (mm)</td>
                            <td>Espessura Inicial (mm)</td>
                            <td>Espessura Inicial (mm)</td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_um_um" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_dois_um" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_tres_um" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_um_dois" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_dois_dois" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_tres_dois" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_um_tres" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_dois_tres" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_tres_tres" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_ini_amostra_um_quatro" /></td>
