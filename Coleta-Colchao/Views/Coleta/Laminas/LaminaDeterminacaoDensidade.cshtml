@model ColetaModel.SalvarLaminaDeterminacaoDensidade;
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Ensaio Lamina Densidade";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/coleta.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>DETERMINAÇÃO DA DENSIDADE</title>
    <style>
        .controlador-conforme {
            padding: 5px;
            border-color: gray;
            border-radius: 5px;
            box-sizing: border-box;
            height: 500px;
            width: 100px;
        }

        input {
            text-align: center;
        }
    </style>
</head>
<body>
    <form asp-controller="Coleta" asp-action="SalvarDeterminacaoDensidade" asp-route-os="@ViewBag.os" asp-route-orcamento="@ViewBag.orcamento" asp-route-rev="@ViewBag.rev">
        <table class="tables table-bordered border-secondary  table-sm">
            <thead>
                <tr>
                    <td><img src="https://www.labsystem-nuvem.com.br/imagens_arq/imagens/img/LabSystem.png" class="imagem" /></td>
                    <td colspan="3" class="fundo-tabela">Coleta De Dados Lamina Densidade</td>
                    <td class="fundo-tabela">N Os:</td>
                </tr>
                <tr>
                    <td colspan="4">Ensaios de Colchão de Espuma (Portaria Inmetro 35)</td>
                    <td rowspan="2"> @ViewBag.os</td>
                </tr>
                @if (Model == null)
                {
                    <tr>
                        <td>Inicio:</td>
                        <td><input class="form-control" type="date" asp-for="data_ini" /></td>
                        <td>Termino:</td>
                        <td><input class="form-control" type="date" asp-for="data_term" /></td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td>Inicio:</td>
                        <td><input class="form-control" type="text" asp-for="data_ini" /></td>
                        <td>Termino:</td>
                        <td><input class="form-control" type="text" asp-for="data_term" /></td>
                    </tr>
                }

            </thead>
        </table>
        <table class="tables table-bordered border-secondary  table-sm">
            <tr class="fundo-tabela">
                <td>Item</td>
                <td>Descrição</td>
                <td>Resultado</td>
            </tr>
            <tr>
                <td rowspan="20">5.1</td>
                <td>
                    Determinação da Densidade
                </td>
                @if (Model == null)
                {
                    <td rowspan="15"></td>
                }
                else
                {

                    <td rowspan="15">@Model.conforme</td>
                }

            </tr>
            <tr>
                <td>
                    O corpo de prova padrão, deve ter suas bases planas e paralelas, faces laterias perpendiculares a elas e volume aparente não inferior a 500 cm³.
                </td>
            </tr>
            <tr>
                <td>
                    Separar 3 corpos de prova e realizar as medições das seguintes dimesões: (Largura 100 ±1mm x comprimento 100 ±1mm x espessura 50 ±1mm).
                </td>
            </tr>
            <tr>
                <td>
                    <table class="tables table-bordered border-secondary table-sm" style="width:1100px;">
                        <tr class="fundo-tabela">
                            <td colspan="12">
                                - Temperatura da execução do ensaio  (23 ± 2) °C, sem necessidade de controle de umidade.
                            </td>
                        </tr>
                        <tr class="fundo-tabela">
                            <td colspan="2">Data do acondicionamento</td>
                            <td colspan="2">Horario do acondicionamento</td>
                            <td colspan="2">Temperatura encontrada</td>
                            <td colspan="2">Umidade</td>
                            <td colspan="2">IM</td>
                        </tr>
                        <tr>
                            <td>Inicio:</td>
                            @if (Model == null)
                            {
                                <td><input asp-for="acond_inicio" class="form-control" type="date"  /></td>
                            }
                            else
                            {
                                <td><input asp-for="acond_inicio" class="form-control" type="text"  /></td>
                            }
                            <td>Inicio:</td>
                            <td><input asp-for="hora_inicio" class="form-control" type="time" /></td>
                            <td>Min : </td>
                            <td><input asp-for="temp_inicio" class="form-control" /></td>
                            <td>Inicio:</td>
                            <td><input asp-for="temp_umidade_inicio" class="form-control" /></td>
                            <td rowspan="2"><input asp-for="im" class="form-control" style="height:80px;"/></td>
                        </tr>
                        <tr>
                            <td>Final:</td>
                            @if (Model == null)
                            {
                                <td><input asp-for="acond_final" class="form-control" type="date" /></td>
                            }
                            else
                            {
                                <td><input asp-for="acond_final" class="form-control" type="text" /></td>
                            }
                            <td>Final:</td>
                            <td><input asp-for="hora_final" class="form-control" type="time" /></td>
                            <td>Max : </td>
                            <td><input asp-for="temp_final" class="form-control" /></td>
                            <td>Final:</td>
                            <td><input asp-for="temp_umidade_final" class="form-control" type="text"/></td>
                        </tr>
                        <tr>
                            <td colspan="4">Responsavel</td>
                            <td colspan="5"><input asp-for="responsavel_cond" class="form-control" /></td>
                        </tr>
                    </table>
                    <br />

                    <table class="tables table-bordered border-secondary  table-sm">
                        <tr>
                            <td colspan="2" class="fundo-tabela">Possui maior ou igual(≥ ou >) </Td>
                            <td colspan="2">
                                <select asp-for="tem_maior_igual" class="form-control">
                               <option>---</option>
                               <option value="Sim">Sim</option>
                               <option value="Não">Não</option>
                           </select>
                           </td>
                           
                        </tr>
                        <tr>
                            <td class="fundo-tabela">Densidade (kg/m³)</td>
                            <td><input type="text" class="form-control" asp-for="densidade" /></td>
                            <td class="fundo-tabela">Tipo Espuma</td>
                            <td colspan="3">
                                <select asp-for="tipo_espuma" class="form-control">
                                    <option value="Convencional">Convencional</option>
                                    <option value="Alta resiliência">Alta resiliência</option>
                                    <option value="Macia">Macia</option>
                                    <option value="Hipermacia">Hipermacia</option>
                                    <option value="Visco elástica">Visco elástica</option>
                                    <option value="Aglomerado">Aglomerado</option>
                                    <option value="Látex">Látex</option>
                                    <option value="Rabatan">Rabatan</option>
                                </select>
                            </td>
                        </tr>
                        <tr class="fundo-tabela">
                            <td rowspan="10">---</td>
                            <td> Amostra 1º</td>
                            <td> Amostra 2º</td>
                            <td> Amostra 3º</td>
                        </tr>
                        <tr class="fundo-tabela">
                            <td>Espessura (mm)</td>
                            <td>Espessura (mm)</td>
                            <td>Espessura (mm)</td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_um" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_um" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_um" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_dois" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_dois" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_dois" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_tres" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_tres" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_tres" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_quat" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_quat" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_quat" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_cinco" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_cinco" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_cinco" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_seis" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_seis" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_seis" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_sete" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_sete" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_sete" /></td>
                        </tr>
                        <tr>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_um_oito" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_dois_oito" /></td>
                            <td><input type="text" class="form-control" asp-for="esp_amostra_tres_oito" /></td>
                        </tr>
                        <tr>
                            <td>Media:</td>
                            <td><input type="text" class="form-control" readonly asp-for="esp_media_um" /></td>
                            <td><input type="text" class="form-control" readonly asp-for="esp_media_dois" /></td>
                            <td><input type="text" class="form-control" readonly asp-for="esp_media_tres" /></td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <td>
                    Volume calculado 1º Amostra:  <input type="text" class="controlador" readonly asp-for="calc_amostra_um" />
                </td>
            </tr>
            <tr>
                <td>
                    Volume calculado 2º Amostra:  <input type="text" class="controlador" readonly asp-for="calc_amostra_dois" />
                </td>
            </tr>
            <tr>
                <td>
                    Volume calculado 3º Amostra:  <input type="text" class="controlador" readonly asp-for="calc_amostra_tres" />
                </td>
            </tr>
            <tr>
                <td>
                    Logo após realizar as medições, medir a massa dos corpos de prova.
                </td>
            </tr>
            <tr>
                <td>
                    <table class="tables table-bordered border-secondary  table-sm">
                        <tr class="fundo-tabela">
                            <td>Amostra</td>
                            <td>Massa (g)</td>
                        </tr>
                        <tr>
                            <td>
                                1°
                            </td>
                            <td><input type="text" class="form-control" asp-for="massa_um" /></td>
                        </tr>
                        <tr>
                            <td>
                                2°
                            </td>
                            <td><input type="text" class="form-control" asp-for="massa_dois" /></td>
                        </tr>
                        <tr>
                            <td>
                                3°
                            </td>
                            <td><input type="text" class="form-control" asp-for="massa_tres" /></td>
                        </tr>

                    </table>
                </td>
            </tr>
            <tr>
                <td>Dr 1: <input type="text" class="controlador" style="width:100px;" asp-for="dr_um_um" readonly /> ÷ <input type="text" class="controlador" style="width:100px;" asp-for="dr_um_dois" readonly /> = <input type="text" class="controlador" style="width:100px;" readonly asp-for="dr_resul_um" /></td>
            </tr>
            <tr>
                <td>
                    Dr 2: <input type="text" class="controlador" style="width:100px;" asp-for="dr_dois_um" readonly /> ÷ <input type="text" class="controlador" style="width:100px;" asp-for="dr_dois_dois" readonly> = <input type=" text" class="controlador" style="width:100px;" readonly asp-for="dr_resul_dois" />
                </td>
            </tr>
            <tr>
                <td>
                    Dr 3:
                    <input type="text" class="controlador" style="width:100px;" asp-for="dr_tres_um" readonly /> ÷ <input type="text" class="controlador" style="width:100px;" asp-for="dr_tres_dois" readonly /> = <input type="text" class="controlador" style="width:100px;" readonly asp-for="dr_resul_tres" />
                </td>
            </tr>
            <tr>
                <td>
                    Dr Media:
                    <input type="text" class="controlador" readonly style="width:150px;" asp-for="dr_media" />
                </td>
            </tr>
        </table>
        <br />
        @if (Model == null)
        {
            <div class="d-grid gap-2 d-flex justify-content-center">
                <button type="submit" class="btn btn-success btn btn-primary btn-md">Salvar Dados</button>
            </div>
        }
        else
        {
            @if (ViewBag.bloqueada != "Sim")
            {
                <div class="d-grid gap-2 d-flex justify-content-center">
                    <button type="submit" class="btn btn-success btn btn-primary btn-md">Editar Dados</button>
                </div>
            }else
            {
                <div class="d-flex justify-content-center">
                    <div class="alert alert-danger w-50 p-3 m-3 text-center" role="alert">
                        Coleta Bloqueada!
                    </div>
                </div>
            }
        }

    </form>
    @if (TempData.ContainsKey("Mensagem"))
    {
        <script>
            alert('@Html.Raw(TempData["Mensagem"])');
        </script>
    }

    <script>
        document.addEventListener("keydown", function (e) {
            if (e.keyCode === 13) {

                e.preventDefault();

            }
        });
    </script>
</body>
</html>