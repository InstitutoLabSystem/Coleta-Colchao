                <td>Ensaio De Espuma</td>
                <td>Ensaio De Laminas</td>
                <td>STATUS</td>
            </tr>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].OS
                    </td>
                    <td>
                        @Model[i].orcamento
                    </td>
                    <td>
                        <a role="button" target="_blank" class="btn btn-success" asp-controller="Coleta" asp-action="Index" asp-route-os="@Model[i].OS" asp-route-orcamento="@Model[i].orcamento">Abrir</a>
                    </td>
                    <td>
                        <a role="button" target="_blank" class="btn btn-success" asp-controller="Coleta" asp-action="Index">Abrir</a>
                    </td>
                    <td>
