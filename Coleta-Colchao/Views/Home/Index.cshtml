                                    @if (ViewBag.user == "CASSIO FARIAS" || ViewBag.user == "WESLLEY NUNES" || ViewBag.user == "WESLLEY" || ViewBag.user == "JMOLINA" || ViewBag.user == "FAGUNDESOFF" || ViewBag.user == "DCALDAS" || ViewBag.user == "GABRIELS")
