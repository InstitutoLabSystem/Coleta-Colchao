@model List<HomeModel.Resposta>
@{
    ViewData["Title"] = "Pagina Inicial";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/coleta.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <title>Document</title>
    <style>

        body {
            font-family: Arial;
        }

        .custom-container {
            text-align: center;
        }

        .tables {
            width: 98%;
        }

        .fundo-tabela {
            background: #800000;
            color: white;
        }
    </style>

</head>
<body class="body">

    <div class="custom-container">
        <form class="form-inline " asp-controller="Home" asp-action="BuscarOrcamento" method="post">
            <div class="container mt-4" style="text-align:center; align-items:center;">
                <div class="row ">
                    <div>
                        <h1 class="display-4 fw-bold ">COLETA COLCHÃO</h1>
                        <div class="input-group ">
                            <input type="text" class="form-control col-md-12 " placeholder="Digite a Ordem De Serviço" aria-label="Recipient's username" aria-describedby="basic-addon2" name="os">
                            <div class="input-group-append  col-md-1">
                                <button class="btn btn-primary " type="submit"> Pesquisar </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>


        @if (Model != null)
        {

            <div class="custom-container-wrapper mb-3">
                <div class="form-row mt-4">
                    <table class="tables table-bordered table-striped  table-sm">
                        <tr>
                            <td class="fundo-tabela" colspan="7">DADOS DA COLETA</td>
                        </tr>
                        <tr class="fundo-tabela">
                            <td>OS</td>
                            <td>ORCAMENTO</td>
                            <td>DESCRIÇÃO</td>
                            <td>STATUS</td>
                            <td>PRODUTO ENSAIADO</td>
                            <td>ENSAIO</td>
                            <td>INFORMAÇÕES</td>
                        </tr>
                        @for (var i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @Model[i].OS
                                </td>
                                <td>
                                    @Model[i].orcamento
                                </td>
                                <td>
                                    @Model[i].descricao
                                </td>
                                <td>
                                    teste
                                </td>
                                <td>
                                    @Model[i].ProdEnsaiado
                                </td>
                                <td>
                                    <a role="button" target="_blank" class="btn btn-success" asp-controller="Coleta" asp-action="Index" asp-route-os="@Model[i].OS" asp-route-orcamento="@Model[i].orcamento">Abrir</a>
                                </td>
                                <td>
                                    <a role="button" target="_blank" class="btn btn-success" asp-controller="Coleta" asp-action="EditarRegistro" asp-route-os="@ViewBag.os" asp-route-orcamento="@ViewBag.orcamento">Informações</a>
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        }
    </div>

</body>
</html>

@if (TempData.ContainsKey("Mensagem"))
{
    <script>
        alert('@Html.Raw(TempData["Mensagem"])');

    </script>

}