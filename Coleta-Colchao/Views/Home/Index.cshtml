    <div class="custom-container">
        <form class="form-inline " asp-controller="Home" asp-action="BuscarOrcamento" method="post">
            <div class="container mt-4" style="text-align:center; align-items:center;">
                <div class="row ">
                    <div>
                        <h1 class="display-4 fw-bold " id="fonte">COLETA COLCHÃO</h1>
                        <div class="input-group ">
                            <input type="text" id="pesquisa" class="form-control col-md-12 " placeholder="Digite a Ordem De Serviço" aria-label="Recipient's username" aria-describedby="basic-addon2" name="os">
                            <div class="input-group-append  col-md-1">
                                <button class="btn btn-primary  " type="submit" id="botao-pesquisar"> Pesquisar </button>
                            </div>
                            @if (Model != null)
                            {
                                <div class="input-group-append  col-sm-1 ml-3">
                                    <a role="button" target="_blank" class="btn btn-secondary" asp-controller="Coleta" asp-action="EnviarFotos" asp-route-os="@ViewBag.os" asp-route-orcamento="@ViewBag.orcamento">Imagens</a>
                                </div>
                            }
                            @if (Model != null)
                            {
                                <div class="input-group-append  col-sm-1 mr-3">
                                    <a role="button" target="_blank" class="btn btn-warning" asp-controller="Instrumentos" asp-action="Index" asp-route-os="@ViewBag.os" asp-route-orcamento="@ViewBag.orcamento">Instrumentos</a>
                                </div>
                            }
                            @if (Model != null)
                            {
                                @if (ViewBag.user == "WESLLEY NUNES" || ViewBag.user == "WESLLEY" || ViewBag.user == "JMOLINA" || ViewBag.user == "FAGUNDESOFF" || ViewBag.user == "DCALDAS" || ViewBag.user == "GABRIELS")
